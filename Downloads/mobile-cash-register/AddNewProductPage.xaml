<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile_cash_register.AddNewProductPage">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Settings" NavigationPage.BackButtonTitle="Back">
                <TableRoot>
                    <TableSection Title="New Product">
                        <EntryCell x:Name ="Name" Placeholder="Product Name" />
                        <EntryCell x:Name ="Price" Placeholder="Price" Keyboard="Numeric"/>
                        <EntryCell x:Name ="Quantity" Placeholder="Quantity" Keyboard="Numeric"/>
                    </TableSection>
                </TableRoot>
            </TableView>
            <StackLayout Orientation="Horizontal">
                <Button 
                    Clicked="SaveClicked"
                    Text="Save" 
                    FontSize="Large" 
                    BackgroundColor="LightGray"
                    BorderRadius="20"/>
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>