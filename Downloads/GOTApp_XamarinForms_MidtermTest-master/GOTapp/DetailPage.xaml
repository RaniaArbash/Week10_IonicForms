<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="GOTapp.DetailPage" Title="{Binding characterName}">

    <RelativeLayout>

     <Image x:Name="image"
        Source="{Binding characterImageThumb}"
           RelativeLayout.WidthConstraint="{ConstraintExpression
        Type=RelativeToParent, Property=Width,Factor=1}"

           RelativeLayout.HeightConstraint="{ConstraintExpression
        Type=RelativeToParent,Property=Height, Factor=0.5}"
           />
    <Label x:Name="firstLabel"
        Text="{Binding characterName}"
           RelativeLayout.YConstraint="{ConstraintExpression
        Type=RelativeToView,ElementName=image,Property=Height,
        Factor=1,Constant=20}"
              RelativeLayout.XConstraint="{ConstraintExpression
        Type=RelativeToParent,Property=Width,
        Factor=0.5,Constant= -40}"
           />
    <Label Text="{Binding actorName}"
            RelativeLayout.YConstraint="{ConstraintExpression
        Type=RelativeToView,ElementName=image,Property=Height,
        Factor=1,Constant=45}"
              RelativeLayout.XConstraint="{ConstraintExpression
        Type=RelativeToParent,Property=Width,
        Factor=0.5, Constant= -40}"
           />

        <StackLayout 
            RelativeLayout.YConstraint="{ConstraintExpression
                Type=RelativeToView,ElementName=image,Property=Height,
                Factor=1,Constant=75}"
            RelativeLayout.XConstraint="{ConstraintExpression
                Type=RelativeToParent,Property=Width,
                Factor=0.5, Constant= -40}">


            <Slider Value="{Binding rating}" Maximum="5" x:Name="ratingSlider" Minimum="0" />

            <Label 
                Text="{Binding Source={x:Reference ratingSlider},
                    Path=Value,
                    StringFormat='The Rating is {0:F0}'}" x:Name="ratingValue"/>

            <Button Text="Save Rating" Clicked="Button_Clicked"/>

        </StackLayout>
    </RelativeLayout>

